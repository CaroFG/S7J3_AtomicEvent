<div class="row">
	<div class="col text-center my-4">
		<% if @user.avatar.attached? == true %>
<%= image_tag @user.avatar, alt: 'avatar', style: 'width:200px; height:auto;', class: 'mx-auto' %>
<% end %>
	</div>
</div>
<div class="row">
	<div class="col text-center mb-4">
<%= form_tag user_avatars_path(@user), multipart: true, class: "btn btn-sm" do %>
 <%= file_field_tag :avatar %>
 <%= submit_tag "Upload", class: "btn btn-primary btn-sm mt-2" %>
<% end %>
</div>
</div>